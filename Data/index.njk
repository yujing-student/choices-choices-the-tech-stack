{% include 'mylayout.njk' %}

<!--https://fdnd-agency.directus.app/items/dda_agencies/-->

{% include 'intro.njk' %}
<section class="grid-container">

    <h2 aria-label="leden" class="hide-members">Leden</h2>
    {% for agencies in dda_agencies %}

    <article class="card">
        <picture>
            <source srcset="https://fdnd-agency.directus.app/assets/{{agencies.photo }}?format=avif" type="image/avif">
            <source srcset="https://fdnd-agency.directus.app/assets/{{agencies.photo }}?format=webp" type="image/avif">
            <img src="https://fdnd-agency.directus.app/assets/{{dda_agencies.photo}}" loading="lazy" alt="foto van het bedrijf">
        </picture>

        <ul class="card-label-filters">
            <li class="label-filters">
                service design
            </li>
            <li class="label-filters">label</li>
        </ul>

        <h3 aria-label="bedrijfsnaam {member.title}">{{ agencies.title }}</h3>
        <p>{{ agencies.address }}</p>

        <ul class="card-label">
            <li>{{agencies.colleagues }} </li>
            <li>werknemers</li>
            <li class="card-hiring">hiring</li>

        </ul>


        <span class="detail-link">Details   <svg class="detail-link" width="16" height="16" slot="svg-icon-right" viewBox="0 0 24 24" fill="none" aria-label="ga naar details">
            <path d="M6 12H18M18 12L13 7M18 12L13 17" stroke-width="2" stroke-linecap="round"
                  stroke-linejoin="round"/>
        </svg></span>


    </article>

    {% endfor %}
</section>
